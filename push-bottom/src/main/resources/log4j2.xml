<?xml version="1.0" encoding="UTF-8"?>
<configuration status="DEBUG">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p - %d{yyyy-MM-dd HH:mm:ss} [%t]%l -- %m%n"/>
        </Console>
    </Appenders>
    <loggers>
        <Root level="info">
            <appender-ref ref="stdout" />
        </Root>
    </loggers>
</configuration>